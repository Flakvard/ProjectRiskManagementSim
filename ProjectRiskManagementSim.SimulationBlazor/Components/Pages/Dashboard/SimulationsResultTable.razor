@using ProjectRiskManagementSim.SimulationBlazor.Components.Pages.Dashboard
<!-- SimulationsResultTable -->
@* Render the table dynamically *@
<div class="Table1 grow shrink basis-0 self-stretch flex-col justify-start items-start inline-flex">
  <div
    class="Table self-stretch grow shrink basis-0 bg-white rounded border border-[#b9b9b9] flex-col justify-start items-start flex">
    <div class="Row self-stretch justify-start items-start inline-flex">
      <div
        class="Cell grow shrink basis-0 self-stretch bg-[#7e44eb] border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch p-0.5 justify-start items-start inline-flex">
          <div
            class="Text grow shrink basis-0 text-center text-white text-xs font-semibold font-['Inter'] leading-none">
            Simulations</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-[#7e44eb] border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch p-0.5 justify-start items-start inline-flex">
          <div
            class="Text grow shrink basis-0 text-center text-white text-xs font-semibold font-['Inter'] leading-none">
            Sim. Date</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-[#7e44eb] border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch p-0.5 justify-start items-start inline-flex">
          <div
            class="Text grow shrink basis-0 self-stretch text-center text-white text-xs font-semibold font-['Inter'] leading-none">
            Target Date</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-[#7e44eb] border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch p-0.5 justify-start items-start inline-flex">
          <div
            class="Text grow shrink basis-0 text-center text-white text-xs font-semibold font-['Inter'] leading-none">
            Days</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-[#7e44eb] border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch p-0.5 justify-start items-start inline-flex">
          <div
            class="Text grow shrink basis-0 text-center text-white text-xs font-semibold font-['Inter'] leading-none">
            Budget</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-[#7e44eb] border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch p-0.5 justify-start items-start inline-flex">
          <div
            class="Text grow shrink basis-0 text-center text-white text-xs font-semibold font-['Inter'] leading-none">
            Actual</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-[#7e44eb] border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch p-0.5 justify-start items-start inline-flex">
          <div
            class="Text grow shrink basis-0 text-center text-white text-xs font-semibold font-['Inter'] leading-none">
            Cost/day</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-[#7e44eb] border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch p-0.5 justify-start items-start inline-flex">
          <div
            class="Text grow shrink basis-0 text-center text-white text-xs font-semibold font-['Inter'] leading-none">
            Delay/day</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-[#7e44eb] border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch p-0.5 justify-start items-start inline-flex">
          <div
            class="Text grow shrink basis-0 text-center text-white text-xs font-semibold font-['Inter'] leading-none">
            Epics</div>
        </div>
      </div>
    </div>
    @foreach (var result in simulationResults)
    {
    <div class="Row self-stretch justify-start items-start inline-flex">
      <div
        class="Cell grow shrink basis-0 self-stretch bg-white/0 border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch px-3 py-2.5 justify-start items-start inline-flex">
          <div class="Text text-black text-xs font-normal font-['Inter'] leading-none">@result.SimulationName</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-white/0 border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch px-3 py-2.5 justify-start items-start inline-flex">
          <div class="Text text-center text-black text-xs font-normal font-['Inter'] leading-none">
            @result.SimulationDate</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-white/0 border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch px-3 py-2.5 justify-start items-start inline-flex">
          <div class="Text text-center text-black text-xs font-normal font-['Inter'] leading-none">@result.TargetDate
          </div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-white/0 border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch px-3 py-2.5 justify-start items-start inline-flex">
          <div class="Text grow shrink basis-0 text-center text-black text-xs font-normal font-['Inter'] leading-none">
            @result.Days</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-white/0 border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch px-3 py-2.5 justify-start items-start inline-flex">
          <div class="Text grow shrink basis-0 text-right text-black text-xs font-normal font-['Inter'] leading-none">
            @result.Budget</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-white/0 border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch px-3 py-2.5 justify-start items-start inline-flex">
          <div class="Text grow shrink basis-0 text-right text-black text-xs font-normal font-['Inter'] leading-none">
            @result.ActualCost</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-white/0 border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch px-3 py-2.5 justify-start items-start inline-flex">
          <div class="Text grow shrink basis-0 text-right text-black text-xs font-normal font-['Inter'] leading-none">
            @result.CostPerDay</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-white/0 border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch px-3 py-2.5 justify-start items-start inline-flex">
          <div class="Text grow shrink basis-0 text-right text-black text-xs font-normal font-['Inter'] leading-none">
            @result.DelayPerDay</div>
        </div>
      </div>
      <div
        class="Cell grow shrink basis-0 self-stretch bg-white/0 border-l border-t border-[#b9b9b9] flex-col justify-center items-start inline-flex">
        <div class="Content self-stretch px-3 py-2.5 justify-start items-start inline-flex">
          <div class="Text grow shrink basis-0 text-center text-black text-xs font-normal font-['Inter'] leading-none">
            @result.Epics</div>
        </div>
      </div>
    </div>
    }
  </div>
</div>

@code {
[Parameter]
public List<SimulationsResultTableModel> simulationResults { get; set; } =
  SimulationsResultTableModel.InitializeSimulationResults();
  }
