<!-- Modal (Full-screen) -->
<div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 hidden" id="modal">
  <div class="bg-white rounded-lg shadow-lg w-1/3 h-5/6 flex flex-col">

    <!-- Modal Header -->
    <div class="px-4 py-2 bg-[#7e44eb] rounded-t-lg flex justify-between items-center border-b">
      <h2 class="text-white text-lg font-semibold">New Simulation</h2>
      <button id="closeModal" class="text-white hover:text-black">&times;</button>
    </div>

    <!-- Modal Body -->
    <div class="flex flex-col p-4 h-full">
      <!-- table -->
      <div class="overflow-auto">
        <table class="w-full">
          <thead>
            <tr>
              <th class="border-b-2 border-gray-300">Name</th>
              <th class="border-b-2 border-gray-300">Type</th>
              <th class="border-b-2 border-gray-300">Manager</th>
              <th class="border-b-2 border-gray-300">Start Date</th>
              <th class="border-b-2 border-gray-300">End Date</th>
              <th class="border-b-2 border-gray-300">Status</th>
              <th class="border-b-2 border-gray-300">Selected</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var project in ProjectsView.Projects)
            {
            <tr id="@project.Id"
              hx-put="/select-project/@project.Id?projectListViewModelId=@project.ProjectListViewModelId"
              hx-trigger="click" hx-target="this" hx-swap="innerHTML">
              <td class="border-b border-gray-300 hidden">@project.Id</td>
              <td class="border-b border-gray-300 hidden">@project.ProjectListViewModelId</td>
              <td class="border-b border-gray-300">@project.Name</td>
              <td class="border-b border-gray-300">@project.Type</td>
              <td class="border-b border-gray-300">@project.Manager</td>
              <td class="border-b border-gray-300">@project.StartDate.ToString("MM/dd/yyyy")</td>
              <td class="border-b border-gray-300">@project.EndDate.ToString("MM/dd/yyyy")</td>
              <td class="border-b border-gray-300">@project.Status</td>
              <td class="border-b border-gray-300">@project.Selected</td>
            </tr>
            }
          </tbody>
        </table>

      </div>

    </div>
    <!-- Modal Footer -->
    <div class=" px-4 py-2 border-t h-fit flex justify-end">
      <button id="closeModalFooter" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 mr-2">
        Close
      </button>
      <button type="submit" class="bg-[#7e44eb] text-white px-4 py-2 rounded hover:bg-blue-600"
        hx-get="/create-new-project-modal" hx-target="#modal" hx-swap="innerHTML">
        Next page
      </button>
    </div>

  </div>
</div>

@code {
[Parameter]
public ProjectListViewModel ProjectsView { get; set; } = new ProjectListViewModel();

}
